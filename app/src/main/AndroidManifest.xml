<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.apps.twitterclient"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.sagarnileshshah.twitterclient.TwitterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="TwitterClient.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.sagarnileshshah.twitterclient.models.Tweet, com.sagarnileshshah.twitterclient.models.User,             com.sagarnileshshah.twitterclient.models.Entities___, com.sagarnileshshah.twitterclient.models.Url_____,             com.sagarnileshshah.twitterclient.models.ExtendedEntities_, com.sagarnileshshah.twitterclient.models.Medium______,             com.sagarnileshshah.twitterclient.models.VideoInfo, com.sagarnileshshah.twitterclient.models.Variant" />

        <activity
            android:name="com.sagarnileshshah.twitterclient.activities.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="macaw"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sagarnileshshah.twitterclient.activities.TimelineActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sagarnileshshah.twitterclient.activities.TweetDetailActivity"
            android:label="@string/title_activity_tweet_detail"
            android:parentActivityName="com.sagarnileshshah.twitterclient.activities.TimelineActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sagarnileshshah.twitterclient.activities.TimelineActivity" />
        </activity>
        <activity
            android:name="com.sagarnileshshah.twitterclient.activities.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:parentActivityName="com.sagarnileshshah.twitterclient.activities.TimelineActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sagarnileshshah.twitterclient.activities.TimelineActivity" />
        </activity>
    </application>

</manifest>
